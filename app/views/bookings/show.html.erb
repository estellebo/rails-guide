<div class="container-show-booking">
  <h1 class="text-warning text-center"><i class="fas fa-check text-success m-3"></i>My booking with <%= @booking.offer.user.first_name %></h1>
  </br>
  <div class="show-booking-content p-4">
    <p class="">Rendez-vous Ã  <%= @booking.offer.meeting_place %> le <%= @booking.date %> pour <%= @booking.offer.content %>.</p>

    <div class="bookings-buttons d-flex align-item-center justify-content-between pt-5 mt-5">
      <div class="left-buttons">
        <div class="btn-offer">
          <%= link_to offer_path(@booking.offer) do %>
          <button type="button" class="btn btn-warning">View the offer</button>
          <% end %>
        </div>
        <div class="mt-3">
          <%= link_to dashboard_path(current_user) do %>
          <button type="button" class="btn btn-outline-warning">Back to my dashboard</button>
          <% end %>
        </div>
      </div>

      <div>
        <% if policy(@booking).destroy? %>
        <%= link_to booking_path(@booking),
        method: :delete,
        data: { confirm: "Are you sure?" } do %>
        <button type="button" class="btn btn-outline-warning">Cancel this booking</button>

        <% end %>
        <% end %>
      </div>
    </div>

  </div>
</div>
