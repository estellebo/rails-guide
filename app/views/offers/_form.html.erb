
<div class="format">
  <div class="container">
    <%= simple_form_for (offer) do |f| %>
      <div class="row">
        <div class="col-6">
          <%= f.input :title %>
        </div>
        <div class="col-6">
          <%= f.input :content %>
        </div>
      </div>
      <div class="row">
      <div class="col-6">
        <%= f.input :city %>
      </div>
      <div class="col-6">
        <%= f.input :price %>
      </div>
      </div>
      <div class="row">
      <div class="col-6">
        <%= f.input :meeting_place %>
      </div>
      <div class="col-6">
        <%= f.input :duration_in_hours, collection: (1..8) %>
      </div>
      <div>
        <div class="ml-3"><%= f.input :photo, as: :file %></div>
        <%= f.submit "Add", class: "btn btn-warning form-control" %>
      </div>
      <% end %>
  </div>
</div>
