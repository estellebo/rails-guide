<div class="dashboard-content container-fluid">

  <h1 class="text-center text-warning font-weight-light p-5"> <i class="far fa-calendar-alt"></i> My Dashboard </h1>


  <div class="row">


    <div class="col-6">
      <div class="dashboard-card">
        <h2>All my offers</h2>
        <div class="row">
          <% if current_user.offers == [] %>
            <p class="m-4 font-weight-light text-warning"> You have no online offers at the moment. Create one now. </p>
          <% else %>
            <% current_user.offers.each do |offer| %>
            <div class="col-6">
              <div class="card m-4">

                <%= link_to offer_path(offer) do %>
                    <%= cl_image_tag offer.photos.first.key, height: 150, width: 210, crop: :fill %>

                <div class="" style="height: 54px;">
                  <h6 class="p-2 infos-title text-capitalize m-4 border-bottom"><%= offer.title %></h6>
                </div>

                <div class="d-flex align-item-center justify-content-center justify-content-around mt-3">
                  <div class="infos">
                    <div class="d-flex"> <i class="icon fas fa-dollar-sign text-warning"></i> <p class="m-1"><%= offer.price %></p></div>
                    <p>Dollars</p>
                  </div>
                  <div class="infos">
                    <div class="d-flex"> <i class="icon fas fa-clock text-warning"></i> <p class="m-1"> <%=offer.duration_in_hours%></p></div>
                    <p>Hours</p>
                  </div>
                </div>
                <p class= "bo p-3"><%= offer.content %></p>
                <% end%>

              </div>
            </div>
            <% end %>
          <% end %>
        </div>

      </br>

      <div class="text-center">
        <%= link_to new_offer_path do %>
          <button type="button" class="btn btn-warning btn-lg form-control">Create an offer</button>
        <% end %>
      </div>
    </div>

    </div>


    <div class="col-6">
      <div class="dashboard-card">
        <h2>All my bookings</h2>

        <div class="row">
          <% if current_user.bookings == [] %>
            <p class = "m-4 font-weight-light text-warning">You have nothing planned. Start looking for ideas for your next trip. </p>
          <% else %>
            <% current_user.bookings.each do |booking| %>
            <div class="col-6">
              <div class="card text-decoration-none m-4">

                <%= link_to booking_path(booking) do %>
                    <%= cl_image_tag booking.offer.photos.first.key, height: 150, width: 210, crop: :fill %>
                    <%= cl_image_tag booking.offer.user.photo.key, height: 40, width: 40, crop: :fill, class: "dashboard-avatar" %>

                <div class="" style="height: 54px;">
                  <h6 class="p-2 infos-title text-capitalize m-4 border-bottom"><%= booking.offer.title %></h6>
                </div>

                <div class="d-flex align-item-center justify-content-center justify-content-around mt-3">
                  <div class="infos">
                    <div class="d-flex"> <i class="icon fas fa-dollar-sign text-warning"></i> <p class="m-1"><%= booking.offer.price %></p></div>
                    <p>Dollars</p>
                  </div>
                  <div class="infos">
                    <div class="d-flex"> <i class="icon fas fa-clock text-warning"></i> <p class="m-1"> <%=booking.offer.duration_in_hours%></p></div>
                    <p>Hours</p>
                  </div>
                </div>
                <p class= "bo p-3"><%= booking.offer.content %></p>
                <% end%>

              </div>
            </div>
            <% end %>
          <% end %>
        </div>

      </br>

      <div class="text-center">
         <%= link_to root_path do %>
          <button type="button" class="btn btn-warning btn-lg form-control">Start experience</button>
          <% end %>
      </div>
    </div>

    </div>

  </div>

  </br></br></br></br>
</div>

